{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "@types/wechat-miniprogram"
    ],
    "lib": [
      "ES6"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.wxs"
  ],
  "exclude": [
    "node_modules"
  ]
}
