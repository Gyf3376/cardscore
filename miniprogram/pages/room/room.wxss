.container {
  min-height: 100vh;
  background-color: #f1f5f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
}

/* 首页视图 */
.home-view {
  width: 100%;
  max-width: 750rpx;
}

.intro-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.icon-wrapper {
  width: 160rpx;
  height: 160rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.icon-wrapper image {
  width: 64rpx;
  height: 64rpx;
}

.intro-text {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.intro-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
}

.intro-desc {
  font-size: 28rpx;
  color: #94a3b8;
  display: block;
}

.action-cards {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  border: 4rpx solid transparent;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.action-card {
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.98);
}

.card-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-box.indigo {
  background-color: #eef2ff;
}

.icon-box.indigo image {
  width: 48rpx;
  height: 48rpx;
}

.icon-box.emerald {
  background-color: #ecfdf5;
}

.icon-box.emerald image {
  width: 48rpx;
  height: 48rpx;
}

.card-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
}

.card-desc {
  font-size: 24rpx;
  color: #94a3b8;
  display: block;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
}

/* 模弹窗样式 */
.create-view,
.join-view {
  width: 100%;
  max-width: 750rpx;
  background-color: #ffffff;
  border-radius: 64rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.modal-header {
  padding: 64rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
}

.close-btn image {
  width: 40rpx;
  height: 40rpx;
}

.modal-content {
  padding: 0 64rpx 64rpx;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-label {
  font-size: 20rpx;
  font-weight: bold;
  color: #94a3b8;
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

.player-count-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.count-option {
  padding: 32rpx;
  border-radius: 48rpx;
  border: 4rpx solid #f1f5f9;
  background-color: #f8fafc;
  text-align: center;
  font-weight: 900;
  color: #94a3b8;
  transition: all 0.3s ease;
  position: relative;
}

.count-option.active {
  border-color: #4f46e5;
  background-color: #eef2ff;
  color: #4338ca;
  box-shadow: 0 4rpx 12rpx rgba(79, 70, 229, 0.1);
}

.count-option.active::after {
  content: '✓';
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 24rpx;
  height: 24rpx;
  background-color: #4338ca;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
}

.settings-section {
  background-color: #f8fafc;
  padding: 48rpx;
  border-radius: 48rpx;
}

.settings-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  color: #94a3b8;
}

.icon-small {
  width: 28rpx;
  height: 28rpx;
}

.settings-title {
  font-size: 20rpx;
  font-weight: bold;
  text-transform: uppercase;
}

.settings-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.setting-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-label {
  font-size: 20rpx;
  color: #94a3b8;
}

.setting-input {
  background-color: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  padding: 0;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  transition: all 0.3s ease;
}

.setting-input:focus {
  border-color: #4f46e5;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(79, 70, 229, 0.1);
}

.btn {
  border: none;
  border-radius: 48rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

.full-width {
  width: 100%;
}

.btn-primary {
  background-color: #4f46e5;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.2);
}

.btn-emerald {
  background-color: #07C160;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

/* 加入房间视图 */
.join-content {
  padding: 0 32rpx 64rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.qr-section {
  padding: 48rpx;
  background-color: #f8fafc;
  border-radius: 48rpx;
  border: 4rpx dashed #e2e8f0;
  text-align: center;
}

.qr-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 16rpx;
}

.qr-text {
  font-size: 24rpx;
  color: #94a3b8;
  display: block;
}

.room-input {
  width: 100%;
  background-color: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 48rpx;
  padding: 28rpx 24rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.4;
  letter-spacing: 0;
  color: #334155;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 96rpx;
}

.room-input:focus {
  border-color: #4f46e5;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(79, 70, 229, 0.1);
}
