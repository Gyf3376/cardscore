.game-container {
  min-height: 100vh;
  background-color: #fafafa;
  padding-bottom: 200rpx;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  z-index: 10;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f1f5f9;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #f1f5f9;
}

.header-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.room-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  line-height: 1.2;
}

.sync-status {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 500;
}

.header-right {
  display: flex;
  gap: 8rpx;
}

.icon-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 8rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-btn:active {
  color: #4f46e5;
}

.icon-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 主体内容 */
.main-content {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* 积分榜 */
.scoreboard {
  background-color: #ffffff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f1f5f9;
  overflow: hidden;
}

.scoreboard-header {
  padding: 40rpx;
  border-bottom: 1rpx solid #f8fafc;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.award-icon {
  width: 36rpx;
  height: 36rpx;
}

.header-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
}

.live-badge {
  font-size: 20rpx;
  background-color: #eef2ff;
  color: #4f46e5;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-weight: bold;
}

.scoreboard-list {
  display: flex;
  flex-direction: column;
}

.score-item {
  padding: 32rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f8fafc;
}

.score-item:last-child {
  border-bottom: none;
}

.player-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-wrapper {
  position: relative;
}

.player-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.rank-badge {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 900;
  background-color: #e2e8f0;
  color: #64748b;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.rank-badge.rank-1 {
  background-color: #fbbf24;
  color: #ffffff;
}

.player-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.player-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
}

.host-badge {
  font-size: 16rpx;
  background-color: #f1f5f9;
  color: #94a3b8;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  text-transform: uppercase;
}

.trend-info {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.trend-icon {
  width: 20rpx;
  height: 20rpx;
}

.trend-text {
  font-size: 20rpx;
  font-weight: bold;
}

.trend-text.positive {
  color: #10b981;
}

.trend-text.negative {
  color: #e11d48;
}

.score-info {
  text-align: right;
}

.score {
  font-size: 40rpx;
  font-weight: 900;
  font-family: monospace;
}

.score.positive {
  color: #1e293b;
}

.score.negative {
  color: #e11d48;
}

/* 最近一局卡片 */
.last-round-card {
  background-color: #eef2ff;
  border: 1rpx solid #e0e7ff;
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.last-round-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #818cf8;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.winner-text {
  font-size: 28rpx;
  color: #3730a3;
}

.winner-name {
  font-weight: bold;
}

.detail-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #4f46e5;
  font-size: 28rpx;
  font-weight: bold;
}

.detail-btn image {
  width: 32rpx;
  height: 32rpx;
}

/* 空状态 */
.empty-state {
  padding: 160rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.empty-icon-wrapper {
  width: 128rpx;
  height: 128rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.empty-icon-wrapper image {
  width: 64rpx;
  height: 64rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: linear-gradient(to top, #ffffff 0%, rgba(255, 255, 255, 0.9) 50%, transparent 100%);
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.secondary {
  background-color: #ffffff;
  border: 1rpx solid #e2e8f0;
  color: #334155;
  max-width: 300rpx;
}

.action-btn.primary {
  background-color: #07C160;
  color: #ffffff;
  flex: 1.5;
  max-width: 400rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

.action-btn image {
  width: 36rpx;
  height: 36rpx;
}
