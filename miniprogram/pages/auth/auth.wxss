.nickname-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.input-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #64748b;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1e293b;
  background-color: #f8fafc;
  box-sizing: border-box;
}

.hint-text {
  font-size: 22rpx;
  color: #94a3b8;
  text-align: center;
  line-height: 1.5;
}

.auth-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.auth-btn::after {
  border: none;
}

.auth-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.agreement-text {
  text-align: center;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 24rpx;
}
