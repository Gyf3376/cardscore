/* 修复：防止页面出现滚动条 */
page {
  height: 100vh;
  overflow: hidden;
}

.auth-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 64rpx;
  background: linear-gradient(180deg, #f1f5f9 0%, #e2e8f0 100%);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 背景装饰元素 */
.auth-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(79, 70, 229, 0.03) 0%, transparent 70%);
  animation: float 20s infinite ease-in-out;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg);
  }
  50% {
    transform: translate(-30rpx, -30rpx) rotate(180deg);
  }
}

.header-section {
  margin-bottom: 48rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  flex-shrink: 0;
}

.logo-wrapper {
  margin-bottom: 32rpx;
  position: relative;
}

.logo-icon {
  width: 150rpx;
  height: 150rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.logo-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(79, 70, 229, 0.08) 0%, rgba(67, 56, 202, 0.08) 100%);
  border-radius: 50%;
}

.logo-text {
  font-size: 60rpx;
  color: #07C160;
  font-weight: bold;
}

.title-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.app-title {
  font-size: 64rpx;
  font-weight: 900;
  color: #07C160;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.app-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #4f46e5 0%, #4338ca 100%);
  border-radius: 2rpx;
}

.app-subtitle {
  font-size: 32rpx;
  color: rgba(30, 41, 59, 0.7);
  letter-spacing: 1rpx;
}

.auth-form {
  width: 100%;
  max-width: 560rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  position: relative;
  z-index: 1;
  flex-shrink: 0;
}

.user-info-card {
  background-color: #ffffff;
  padding: 48rpx;
  border-radius: 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.user-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4f46e5 0%, #4338ca 100%);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #4f46e5 0%, #4338ca 100%);
  border-radius: 2rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 36rpx;
}

/* 头像按钮样式 - 微信官方风格 */
.avatar-container {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
  position: relative;
}

/* 修复微信小程序 button 默认样式问题 */
.avatar-button {
  /* 重置微信小程序 button 的默认样式 */
  padding: 0;
  margin: 0;
  line-height: normal;
  min-width: auto;
  min-height: auto;

  /* 设置按钮的明确尺寸 */
  width: 200rpx;
  height: 200rpx;

  border: none;
  background: transparent;
  position: relative;
  transition: all 0.3s ease;
  transform: translateY(0);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;

  /* 移除微信小程序 button 的默认边框 */
  border-radius: 0;
}

/* 移除微信小程序 button 的默认 ::after 伪元素 */
.avatar-button::after {
  border: none;
  content: none;
}

.avatar-button:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.avatar-button.placeholder {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border: 3rpx dashed #94a3b8;
  border-radius: 24rpx;
}

.avatar-button.placeholder::before {
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
  border-radius: 50%;
  opacity: 0.08;
}

/* 头像图片 - 圆角矩形样式 */
.avatar-img {
  /* 现在可以直接使用固定尺寸，不需要百分比 */
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  display: block;
}

.avatar-img:hover {
  transform: scale(1.02);
}

/* 编辑图标提示层 */
.edit-icon-overlay {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(79, 70, 229, 0.3);
  border: 3rpx solid #ffffff;
  z-index: 10;
}

.edit-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 默认头像图标 */
.default-avatar-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.default-avatar-text {
  font-size: 80rpx;
  opacity: 0.4;
}

/* 上传遮罩层 - 与头像圆角矩形一致 */
.uploading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border-radius: 24rpx;
  z-index: 20;
}

/* 加载旋转图标 */
.uploading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.uploading-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.nickname-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 8rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  font-size: 32rpx;
  color: #1e293b;
  background-color: #f8fafc;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.nickname-input:focus {
  border-color: #4f46e5;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(79, 70, 229, 0.1);
}

.hint-text {
  font-size: 22rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.auth-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07C160 0%, #06a850 100%);
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.auth-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 50%, transparent 100%);
  transition: left 0.5s ease;
}

.auth-btn:hover::before {
  left: 100%;
}

.auth-btn::after {
  border: none;
}

.auth-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.agreement-text {
  text-align: center;
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 24rpx;
  line-height: 1.5;
  flex-shrink: 0;
}
