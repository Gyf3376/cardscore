.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(16rpx);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-width: 560rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 48rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}

.close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.close-btn image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  width: 100%;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
}

.qrcode-wrapper {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.qrcode-canvas {
  width: 340rpx;
  height: 340rpx;
}

.room-code-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  background-color: #f8fafc;
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.room-code-label {
  font-size: 22rpx;
  font-weight: bold;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.room-code-value {
  font-size: 48rpx;
  font-weight: 900;
  color: #07C160;
  letter-spacing: 4rpx;
  font-family: monospace;
}

.hint-text {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
  line-height: 1.5;
  margin-top: 8rpx;
}

.action-buttons {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.97);
}

.action-btn.primary {
  background: linear-gradient(135deg, #07C160 0%, #06a850 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.action-btn.secondary {
  background-color: #f8fafc;
  color: #334155;
  border: 2rpx solid #e2e8f0;
}
